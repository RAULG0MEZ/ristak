{
  "name": "fundly-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:api\"",
    "dev:frontend": "vite",
    "dev:api": "node api/src/server.js",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "api": "node api/src/server.js",
    "deploy": "./deploy/scripts/smart-deploy.sh",
    "deploy:quick": "./deploy/scripts/smart-deploy.sh --quick",
    "deploy:clean": "./deploy/scripts/smart-deploy.sh --clean-only",
    "push": "./github/git-push.sh",
    "quick-push": "git add . && git commit -m \"Quick update\" && git push origin main",
    "pull": "./github/git-pull.sh",
    "sync": "./github/git-pull.sh && ./github/git-push.sh \"Sync with remote\""
  },
  "dependencies": {
    "@lobehub/icons": "^2.32.2",
    "@prisma/client": "^6.16.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.543.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "prisma": "^6.16.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "recharts": "^3.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
